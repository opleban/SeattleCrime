<header>
  <div class="row">
    <h1 class="main-title col-sm-6">Game Day Criminality</h1>
    <select class="year-selection form-control input-lg col-sm-3 pull-right">
      <option>Select Year</option>
      <option value=2012>2012</option>
      <option value=2013>2013</option>
      <option value=2014>2014</option>
    </select>
    <select class="team-selection form-control input-lg col-sm-3 pull-right">
      <option>Select Team Name</option>
      <% @nfl_teams.each do |team_name| %>
        <option value=<%=team_name[0]%>><%=team_name[1]%></option>
      <% end %>
    </select>
  </div>
</header>
<div class="explainer container">
</div>
<div class="container">
  <div id="map"></div>
</div>
<div class="data-overview">
  <div class="container">
    <h2 class="chart-title">Recent crime statistics by incident type</h2>
    <div id="overview-bar-chart"></div>
  </div>
</div>
  <footer></footer>
</div>